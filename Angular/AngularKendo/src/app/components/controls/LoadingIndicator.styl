indicatorSize = 80px

:host
    display block
    position relative
    left 0px
    top 0px
    width 100%
    height 100%
    overflow hidden

    div.loading-image
        position absolute
        left 0px
        top 0px
        width 100%
        height 100%
        background-color transparent
        background-image url("art/images/loading-image.gif")
        background-position center center
        background-repeat no-repeat
        z-index 100
        