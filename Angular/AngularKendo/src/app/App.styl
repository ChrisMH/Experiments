@require "../global.styl"

:host
    position absolute
    left 0px
    top 0px
    right 0px
    bottom 0px
    background-color backgroundColor
    overflow hidden

    header
        background-color backgroundColor
        position fixed
        left 0
        top 0
        width 100%
        height header-height
        border-bottom 1px solid formBorderColor 
        overflow hidden
        
        h2 
            padding-left 2px
            
        a
            padding 0px 10px 0px 2px

        #header-version
            font-size x-small
            position absolute
            top 2px
            right 5px


    div#view-container
        position absolute
        left 0
        right 0
        top headerHeight
        bottom 0
        overflow auto

    