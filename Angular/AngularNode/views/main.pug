doctype html
html
  head
    if dev
      title="Dev | Angular Template"
    else
      title="Angular Template"
    base(href="!{baseUrl}")
    link(href="art/favicon.ico" type="image/x-icon" rel="icon")
    link(href="art/favicon.ico" type="image/x-icon" rel="shortcut icon")

    if dev
        link(href=`vendor.css`, type="text/css" rel="stylesheet")
        link(href=`app.css`, type="text/css" rel="stylesheet")
    else
        link(href=`vendor-${version}.css`, type="text/css" rel="stylesheet")
        link(href=`app-${version}.css`, type="text/css" rel="stylesheet")
       
  body
    <app>Loading...</app>

    script(type="text/javascript"). 
        // Configuration to be used by the web site
        (function() {
            if(!window.hasOwnProperty("app")) window.app = {};
            window.app.settings = {
                version: "!{version}"
            };
        })(); 

    if dev
        script(src="polyfills.js" type="text/javascript")
        script(src="vendor.js", type="text/javascript")
        script(src="app.js", type="text/javascript")
    else        
        script(src=`polyfills-${version}.js` type="text/javascript")
        script(src=`vendor-${version}.js`, type="text/javascript")
        script(src=`app-${version}.js`, type="text/javascript")

