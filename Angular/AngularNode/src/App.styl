@require "global.styl"

header
    background-color background-color
    position fixed
    left 0
    top 0
    width 100%
    height header-height
    border-bottom 1px solid form-border-color 
    overflow hidden

    h2, div
        display inline-block

    #header-version
        font-size x-small
        position absolute
        top 2px
        right 5px


div#view
    position absolute
    left 0
    top header-height
    bottom 0
    width 100% 
    overflow auto

    > *:not(router-outlet)
        position absolute
        width 100%
        padding 10px

