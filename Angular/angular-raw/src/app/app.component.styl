@import '../global.styl'

:host
    display flex
    flex-direction column
    width 100%
    height 100%

    header
        display flex
        justify-content start
        align-items center
        border-bottom 1px solid borderColor
        font-size 13px
        padding defaultPadding

        >a
            flex 0 1 auto

        >div
            display flex
            flex 1 1 100%
            justify-content flex-end
            align-items center

            >:not(:last-child)
                margin-right defaultSpacing

    div#view-container
        flex 1 1 100%
        font-size 13px
        padding defaultPadding
        overflow-x auto
        overflow-y auto

    footer
        display flex
        justify-content center
        align-items center
        border-top 1px solid borderColor
        padding defaultPadding
        font-size 10px
