doctype html
html
  head
    if dev
      title="Dev | AngularJS 1.5 Template"
    else
      title="AngularJS 1.5 Template"
    base(href=baseUrl)
    link(href=virtualDir.concat("/img/favicon.ico") type="image/x-icon" rel="icon")
    link(href=virtualDir.concat("/img/favicon.ico") type="image/x-icon" rel="shortcut icon")

    if dev
        script(src=rootUrl.concat("node_modules/systemjs/dist/system.src.js") type="text/javascript")
    else
        script(src=rootUrl.concat("/system-", version, ".js") type="text/javascript")

    script(type="text/javascript"). 
        // Set the base URL for SystemJS
        (function() {
            System.config({baseURL: '!{baseUrl}'});
        })();

    if dev
        script(src=virtualDir.concat("/src/system.config.js"), type="text/javascript")
    else        
        script(src=virtualDir.concat("/system.config-", version, ".js"), type="text/javascript")

    script(type="text/javascript"). 
        // Configuration to be used by the web site
        (function() {
            if(!window.hasOwnProperty("page")) window.page = {};
            window.page.config = JSON.parse('!{config}');
        })();

        // Bootstrap the application with SystemJS
        (function() {
            System.import("app").catch(function(err) { console.log(err); } );
        })();
  body
    div(id="root" ui-view)
