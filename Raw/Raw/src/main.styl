@require "global.styl"

*
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
     
html, body
    background-color backgroundColor


div#first
    position relative
    border 1px solid red
    width 100px
    height 200px

div#second
    position relative
    border 1px solid blue
    width 300px
    height 100px

.loading-image
    position absolute
    left 0px
    top 0px
    width 100%
    height 100%
    background-image url("art/images/loading-image.gif")
    background-repeat no-repeat
    background-position center center
