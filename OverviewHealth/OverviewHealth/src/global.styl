backgroundColor = rgb(224,224,224)

formBorderColor = rgb(192,192,192)

viewPadding = 5px

formBorderRadius = 5px
formPadding = 10px
formHeaderColor = rgb(150,150,150)

brandingImageWidth = 138px
brandingImageHeight = 48px
brandingImageMargin = 10px

headerHeight = brandingImageHeight + 2 * brandingImageMargin

defaultMargin = 2px

linear_gradient(origin, colors...)    
    fallback = colors[1][0]
    colors = join(', ', colors)
    colors = unquote(colors)
    background-color: fallback
    background-image: -webkit-linear-gradient(origin, colors) // Chrome, Safari
    background-image:    -moz-linear-gradient(origin, colors) // Firefox (3.6 - 15)
    background-image:     -ms-linear-gradient(origin, colors) // IE 10
    background-image:      -o-linear-gradient(origin, colors) // Opera (11.1 - 12.0) 
    background-image:         linear-gradient(origin, colors) // W3
