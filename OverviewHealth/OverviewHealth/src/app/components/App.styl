@require "../../global.styl"
 

:host 
    width 100%
    height 100%
    max-width maxWidth
    margin 0px auto 0px auto
    background-color backgroundColor
    // Necessary to force the app element, which is automatically converted to display: flex,
    // to flow in columns.  May be different in later versions if @angular/flex-layout.
    flex-direction column 

    header
        border-bottom 1px solid formBorderColor 
        font-size 13px      
        
        >a
            padding-left defaultPadding
        
        >div
            padding-right defaultPadding

            div#version
                font-size x-small

    div#view-container
        font-size 13px
        padding defaultPadding
        overflow-x hidden
        overflow-y auto
