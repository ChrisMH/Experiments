@require "../../../global.styl";


errorBoxBorderColor = red
errorBoxBorderRadius = 3px

:host
    form
        border 1px solid formBorderColor
        border-radius formBorderRadius
        padding formPadding
        margin 100px auto 0px auto
        width 350px

        div#header
            font-size 14px
            font-weight bold
            padding-bottom formPadding
            border-bottom 1px solid formBorderColor

        input.k-textbox
            width 250px        

        button
            width 100px

        div#error-box
            border 1px solid errorBoxBorderColor
            border-radius errorBoxBorderRadius

            div#title
                border 1px solid errorBoxBorderColor
                background-color errorBoxBorderColor
                border-top-left-radius errorBoxBorderRadius
                border-bottom-left-radius errorBoxBorderRadius
                padding 3px
            
            span#error
                font-size 16px

            div#message
                padding 5px
            
   



