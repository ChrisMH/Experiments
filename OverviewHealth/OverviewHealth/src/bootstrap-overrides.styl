@require "global.styl"

/* Bootstrap Overrides */
label
    margin-bottom 2px
    margin-top 3px

.form-control
    border-radius border-radius

.btn
    border-radius border-radius
    margin-bottom 0px
    margin-top 0px

.ui-select-bootstrap
    input.ui-select-search.form-control
        border-radius border-radius
    input.ui-select-search.form-control.direction-up
        border-radius border-radius

div.ui-select-multiple.ui-select-bootstrap
    padding 2px 3px 2px 3px

    input.ui-select-search
        height 26px

    span.ui-select-match-item
        padding 3px 6px 1px 6px
        margin-bottom 1px
        font-size 14px    

        .ui-select-match-close
            line-height 1em
