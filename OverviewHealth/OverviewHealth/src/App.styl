@require "global.styl"
 
:host 
    position fixed
    left 0px
    top 0px
    right 0px
    bottom 0px
    background-color background-color
    overflow hidden
 
    ov-header
        background-color background-color
        position fixed
        left 0
        top 0
        width 100%
        height header-height
        border-bottom 1px solid form-border-color 
        overflow hidden

    div#view
        position fixed
        left 0px
        top header-height
        right 0px
        bottom 0px
        overflow auto

